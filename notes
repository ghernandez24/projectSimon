	let blueButtonDisplay = document.querySelector('#blue-panel');
	blueButtonDisplay.style.backgroundColor = '#676CF1';
	setTimeout(stopBlueColor, 1750);
}
function stopBlueColor() {
	clearInterval(blueFlash);
